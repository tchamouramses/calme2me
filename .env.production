# Environment Configuration File for Production
# Copy this file to .env.production and update values
# KEEP THIS FILE SECURE - DO NOT COMMIT TO VERSION CONTROL

APP_ENV=production
APP_DEBUG=false
APP_KEY=

# Database
DB_CONNECTION=mysql
DB_HOST=mysql.prod.internal
DB_PORT=3306
DB_DATABASE=calme2me_prod
DB_USERNAME=calme2me
DB_PASSWORD=
DB_ROOT_PASSWORD=

# Cache & Session (use Redis)
CACHE_DRIVER=redis
REDIS_HOST=redis.prod.internal
REDIS_PORT=6379
REDIS_PASSWORD=
SESSION_DRIVER=cookie

# Queue (use Redis)
QUEUE_CONNECTION=redis

# API Configuration
APP_URL=https://calme2me.com
API_URL=https://calme2me.com/api

# Frontend Configuration
VITE_API_URL=https://calme2me.com/api

# Laravel Reverb (WebSocket)
LARAVEL_REVERB_HOST=0.0.0.0
LARAVEL_REVERB_PORT=8080
LARAVEL_REVERB_APP_ID=calme2me
LARAVEL_REVERB_APP_KEY=

# OpenAI Configuration (for content moderation)
OPENAI_API_KEY=

# Mail Configuration
MAIL_DRIVER=ses
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@calme2me.com
MAIL_FROM_NAME="calme2me"

# Docker Registry
DOCKER_REGISTRY=your-registry.com
DOCKER_TAG=latest

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error

# Security
CORS_ALLOWED_ORIGINS=https://calme2me.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

OPENAI_API_KEY=
OPENAI_ASSISTANT_ID=