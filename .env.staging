# Environment Configuration File for Staging
# Copy this file to .env.staging and update values

APP_ENV=staging
APP_DEBUG=false
APP_KEY=

# Database
DB_CONNECTION=mysql
DB_HOST=mysql.staging.internal
DB_PORT=3306
DB_DATABASE=calme2me_staging
DB_USERNAME=calme2me
DB_PASSWORD=
DB_ROOT_PASSWORD=

# Cache & Session (use Redis in production)
CACHE_DRIVER=file
SESSION_DRIVER=cookie

# Queue
QUEUE_CONNECTION=sync

# API Configuration
APP_URL=https://staging.calme2me.com
API_URL=https://staging.calme2me.com/api

# Frontend Configuration
VITE_API_URL=https://staging.calme2me.com/api

# Laravel Reverb (WebSocket)
LARAVEL_REVERB_HOST=0.0.0.0
LARAVEL_REVERB_PORT=8080
LARAVEL_REVERB_APP_ID=calme2me
LARAVEL_REVERB_APP_KEY=calme2me-secret-key

# OpenAI Configuration (for content moderation)
OPENAI_API_KEY=

# Mail Configuration
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=

# Docker Registry
DOCKER_REGISTRY=your-registry.com
DOCKER_TAG=staging

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=info
