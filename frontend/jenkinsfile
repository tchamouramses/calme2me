pipeline {
    agent any

    environment {
        WORKDIR = 'workspace'
        FRONTEND_DIR = 'frontend'
    }

    stages {
        stage('Prepare configs...') {
            steps {
                dir("${env.FRONTEND_DIR}") {
                    script {
                        sh '''
                        '''

                        def bparams = [
                        ]

                        bparams.each { key, value ->
                            sh "sed -i 's|${key}|${value}|g' docker-compose.yml"
                        }
                    }
                }
            }
        }

        stage('Build modules and deploy services') {
            steps {
                dir("${env.FRONTEND_DIR}") {
                    sh 'docker compose up -d --build'
                }
            }
        }

        stage('Post-build cleanup') {
            steps {
                sh 'rm -rf ${WORKDIR}'
            }
        }
    }

    post {
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
